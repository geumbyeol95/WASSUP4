def say_yeoeun(yeo):
    if yeo == '바보':
        return '나는 바보입니다.'
    elif yeo == '멍충이':
        return '나는 멍충이입니다.'
    print(f'나의 별명은 {yeo}입니다.')


say_yeoeun('바보')


say_yeoeun('멍충이')


def say_nick(nick):
    if nick == '바보': 
        return '옥상으로 따라와'
    print(f'나의 별명은 {nick} 입니다.')


say_nick('바보')


def say_myself(name, age, man=True):
    print(f'나의 이름은{name}입니다.')
    print(f'나의 나이는 {age}입니다.')
    if man:
        print('삐빅, 남자입니다.')
    else:
        print('삐빅, 여자입니다.')


